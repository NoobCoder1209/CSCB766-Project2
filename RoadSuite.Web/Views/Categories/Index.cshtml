@model IEnumerable<Category>
@{
    ViewData["Title"] = "Categories";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">Categories</h1>
    <a asp-action="Create" class="btn btn-primary">Add Category</a>
</div>

<table class="table table-dark table-striped align-middle">
    <thead class="table-secondary text-dark">
        <tr>
            <th>Name</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td class="text-end">
                    <div class="btn-group btn-group-sm">
                        <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-outline-light">Edit</a>
                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-outline-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
