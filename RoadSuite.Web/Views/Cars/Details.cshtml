@using System.Security.Claims
@model Car
@{
    ViewData["Title"] = $"{Model.Make} {Model.Model}";
}

<div class="card bg-darker border-secondary shadow-sm">
    <div class="card-body">
        <h1 class="card-title">@Model.Make @Model.Model (@Model.Year)</h1>
        <p class="card-text text-secondary">Listed @Model.CreatedUtc.ToLocalTime().ToString("MMMM dd, yyyy")</p>
        <div class="row g-3">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Price</dt>
                    <dd class="col-sm-8">@Model.Price.ToString("C")</dd>
                    <dt class="col-sm-4">Category</dt>
                    <dd class="col-sm-8">@Model.Category?.Name</dd>
                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8">@Model.Status</dd>
                    <dt class="col-sm-4">Dealer</dt>
                    <dd class="col-sm-8">@Model.DealerProfile?.DealershipName</dd>
                </dl>
            </div>
            <div class="col-md-6">
                <h5>Description</h5>
                <p>@Model.Description</p>
            </div>
        </div>
        <div class="mt-3 d-flex gap-2">
            <a asp-action="Index" class="btn btn-outline-light">Back to list</a>
            @if (User.IsInRole("Admin") || User.IsInRole("Moderator") || (User.IsInRole("Dealer") && Model.DealerProfile?.UserId == User.FindFirstValue(ClaimTypes.NameIdentifier)))
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
            }
        </div>
    </div>
</div>
