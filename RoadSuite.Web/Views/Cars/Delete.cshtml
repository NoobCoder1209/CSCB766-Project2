@model Car
@{
    ViewData["Title"] = "Delete Car";
}

<h1 class="h3 mb-3">Delete Confirmation</h1>

<div class="alert alert-warning text-dark">
    <p class="mb-1">Choose how you want to remove <strong>@Model.Make @Model.Model (@Model.Year)</strong>.</p>
    <ul class="mb-0">
        <li><strong>Mark for deletion</strong> hides the listing but keeps it for moderator review.</li>
        <li><strong>Permanent delete</strong> removes all records immediately. Moderators/Admins may need this for policy violations.</li>
    </ul>
</div>

<div class="card bg-darker border-secondary mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">@Model.Price.ToString("C")</dd>
            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>
            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Model.Category?.Name</dd>
        </dl>
        <p>@Model.Description</p>
    </div>
</div>

<form asp-action="Delete" method="post" class="d-flex gap-2">
    <input type="hidden" asp-for="Id" />
    <button type="submit" name="deleteAction" value="mark" class="btn btn-outline-warning">Mark for deletion</button>
    <button type="submit" name="deleteAction" value="permanent" class="btn btn-danger">Permanent delete</button>
    <a asp-action="My" class="btn btn-outline-light">Cancel</a>
</form>
