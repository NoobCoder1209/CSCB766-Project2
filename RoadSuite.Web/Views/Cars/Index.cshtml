@model (PagedResult<Car> Paged, CarFilterViewModel Filter)
@{
    ViewData["Title"] = "Cars";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3">All Cars</h1>
    @if (User.IsInRole("Dealer") || User.IsInRole("Admin") || User.IsInRole("Moderator"))
    {
        <a asp-action="Create" class="btn btn-primary">Add Car</a>
    }
</div>

@await Html.PartialAsync("_CarFilter", Model.Filter)

@await Html.PartialAsync("_CarTable", (Model.Paged, "Index", Model.Filter))
