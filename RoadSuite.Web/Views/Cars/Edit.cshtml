@model CarFormViewModel
@{
    ViewData["Title"] = "Edit Car";
}

<h1 class="h3 mb-3">Update Car Listing</h1>

<form asp-action="Edit" method="post" class="bg-darker border-secondary rounded p-4 shadow-sm">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row g-3">
        <div class="col-md-4">
            <label asp-for="Make" class="form-label"></label>
            <input asp-for="Make" class="form-control bg-dark text-light border-secondary" />
            <span asp-validation-for="Make" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="Model" class="form-label"></label>
            <input asp-for="Model" class="form-control bg-dark text-light border-secondary" />
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="Year" class="form-label"></label>
            <input asp-for="Year" class="form-control bg-dark text-light border-secondary" />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" class="form-control bg-dark text-light border-secondary" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="CategoryId" class="form-label">Category</label>
            <select asp-for="CategoryId" asp-items="Model.CategoryOptions" class="form-select bg-dark text-light border-secondary"></select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <div class="col-12">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" rows="4" class="form-control bg-dark text-light border-secondary"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <p class="mt-3 text-secondary small">Status: <strong>@Model.ExistingStatus</strong>. Dealer edits will resubmit for approval.</p>
    <div class="mt-3 d-flex gap-2">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="My" class="btn btn-outline-light">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
